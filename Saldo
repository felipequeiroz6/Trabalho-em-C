#include <stdio.h>

// Função para consultar saldo
float consultarSaldo(float saldo) {
    return saldo;
}

int main() {
    float saldo = 198.74; // Saldo inicial da conta
    int opcao;

    printf("Bem-vindo ao sistema bancário!\n");
    printf("1. Consultar saldo\n");
    printf("2. Sair\n");
    printf("Escolha uma opção: ");
    scanf("%d", &opcao);

    if (opcao == 1) {
        printf("Seu saldo atual é: R$ %.2f\n", consultarSaldo(saldo));
    } else {
        printf("Saindo...\n");
    }

    return 0;
}
